<div class="container">
<p><%= @restaurant.name%></p>
<p><strong>Adress: </strong><%= @restaurant.address%></p>
<p><strong>Category: </strong><%= @restaurant.category%></p>
<p><strong>Rating: </strong><%= @restaurant.category%></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

</div>

<div class="container">
<h1>New review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATING %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

</div>
